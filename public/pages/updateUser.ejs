<div class="jumbotron text-center">
    <h1>Update a User</h1>

    <div ng-controller="updateUserController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="updateUser()"
                      style="margin-top:30px;">
                    <h3>Please Enter User Details Below</h3>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="First Name"
                               ng-model="formData.fName"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Last Name"
                               ng-model="formData.lName"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="email"
                               class="form-control"
                               placeholder="Email Address"
                               ng-model="formData.email"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="tel"
                               class="form-control"
                               placeholder="Contact Number"
                               ng-model="formData.contactNo"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="password"
                               class="form-control"
                               placeholder="Password"
                               ng-model="formData.password"
                               ng-style="{'width': 200 + 'px'}">
                    </div>


                    <! --- User Address --- >
                    <div class="form-group" align="center">
                        <br>
                        <p>Address</p>
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Street"
                               ng-model="formData.street"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Town"
                               ng-model="formData.town"
                               ng-style="{'width': 200 + 'px'}">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="County"
                               ng-model="formData.county"
                               ng-style="{'width': 200 + 'px'}">
                    </div>


                    <button type="button" class="btn btn-primary" ng-click="updateUser()">Update User</button>
                </form>

            </div>
        </div>
    </div>