<style>
    .jumbotron {
        margin-top: 10px;
        margin-left: 50px;
        margin-right: 50px;
    }
</style>
<div class="jumbotron text-center">
    <h1>Add A New User</h1>

    <div id="addUserPage" ng-controller="adduserController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addUser()"
                      style="margin-top:30px;">
                    <h3>Please Enter User Details Below</h3>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="First Name"
                               ng-model="formData.fName"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id = "fNameBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Last Name"
                               ng-model="formData.lName"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id = "lNameBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="email"
                               class="form-control"
                               placeholder="Email Address"
                               ng-model="formData.email"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id = "emailBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="tel"
                               class="form-control"
                               placeholder="Contact Number"
                               ng-model="formData.contactNo"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id = "contactNumBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="password"
                               class="form-control"
                               placeholder="Password"
                               ng-model="formData.password"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id = "passwordBox">
                    </div>


                    <! --- User Address --- >
                    <div class="form-group" align="center">
                        <br>
                        <p>Address</p>
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Street"
                               ng-model="formData.street"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id="streetBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Town"
                               ng-model="formData.town"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id="townBox">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="County"
                               ng-model="formData.county"
                               ng-style="{'width': 200 + 'px'}"
                               required = "true"
                               id="countyBox">
                    </div>


                    <button id="addUserBtn" type="submit" class="btn btn-primary">Add User</button>
                </form>

            </div>
        </div>
    </div>